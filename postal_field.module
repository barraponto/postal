/**
 * Implementation of hook_content_is_empty().
 */
function postal_field_content_is_empty($item, $field) {
  foreach (array_keys(postal_database_columns()) as $key) {
    if (!empty($item[$key])) return FALSE;
  }
  return TRUE;
}

