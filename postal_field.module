/**
 * Implementation of hook_theme().
 */
function postal_field_theme() {
  $theme = array();
  foreach (array('default', 'country', 'city', 'state', 'zip') as $func) {
    $theme['postal_field_formatter_'. $func] = array(
      'arguments' => array('element' => NULL, 'function' => 'postal_'. $func),
      'function' => 'postal_field_formatter_all',
    );
  }
  return $theme;
}

function theme_postal_field_formatter_all($element, $function) {
  // Use theme_postal_address for the default item.
  if ($function == 'postal_default') $function = 'postal_address';

  // Call the "real" theme function with the item we've received.
  return theme($function, (object) $element['#item']);
}
